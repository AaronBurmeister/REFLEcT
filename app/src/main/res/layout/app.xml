<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
										android:layout_width="match_parent"
										android:layout_height="match_parent">

	<RelativeLayout
		android:id="@+id/content_frame"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<de.ab.reflect.console.ConsoleView
			android:id="@+id/stdout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_above="@+id/stdin"/>

		<de.ab.reflect.console.StatefulConsoleCtrlView
			android:id="@+id/stdin"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:background="#1000"
			android:padding="5dp"/>

	</RelativeLayout>

	<LinearLayout
		android:id="@+id/left_drawer"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="#222"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#1fff">

			<TextView
				android:id="@+id/connection"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toLeftOf="@+id/open_file_options"
				android:layout_toStartOf="@+id/open_file_options"
				android:gravity="center"
				android:singleLine="true"
				android:maxLines="1"
				android:scrollHorizontally="true"
				android:ellipsize="middle"
				android:paddingBottom="@dimen/title_offset"
				android:paddingTop="@dimen/title_offset"
				android:textAppearance="?android:textAppearanceMedium"/>

			<de.ab.fontawesome.FontAwesomeButton
				android:id="@+id/open_file_options"
				style="?android:buttonBarButtonStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:text="@string/fa_caret_down"/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<EditText
				android:id="@+id/open_file_path"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toLeftOf="@+id/open_file"
				android:layout_toStartOf="@+id/open_file"
				android:hint="@string/remote_file_path"
				android:maxLines="1"
				android:scrollHorizontally="true"
				android:singleLine="true"/>

			<de.ab.fontawesome.FontAwesomeButton
				android:id="@+id/open_file"
				style="?android:buttonBarButtonStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toLeftOf="@+id/select_file"
				android:layout_toStartOf="@+id/select_file"
				android:text="@string/fa_file_text"/>

			<de.ab.fontawesome.FontAwesomeButton
				android:id="@+id/select_file"
				style="?android:buttonBarButtonStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:text="@string/fa_folder_open"/>

		</RelativeLayout>

		<de.ab.reflect.ProjectView
			android:id="@+id/project"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/group_sm_light"
			android:visibility="gone"/>

		<ListView
			android:id="@+id/open_files"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="start"
			android:choiceMode="singleChoice"
			android:divider="@android:color/transparent"
			android:dividerHeight="0dp"/>

	</LinearLayout>

</android.support.v4.widget.DrawerLayout>
